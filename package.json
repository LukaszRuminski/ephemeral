{
    "name": "mw-nextjs-seed",
    "version": "0.0.1",
    "repository": "pg-consumer@vs-ssh.visualstudio.com:v3/pg-consumer/MW-Framework/MW-nextjs-seed",
    "author": "ACE Team <batorski.kb@pg.com>",
    "license": "MIT",
    "scripts": {
        "dev": "yarn check-quality && node server.js",
        "preview": "npm install yarn -g && yarn install && next build",
        "build": "yarn check-quality && next build",
        "export": "yarn build && next export",
        "start": "node server.js",
        "lint": "yarn lint:js",
        "lint:js": "eslint *.js",
        "test": "jest --watch",
        "test:ci": "jest --passWithNoTests",
        "check-quality": "yarn test:ci && yarn lint"
    },
    "dependencies": {
        "next": "^9.0.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "babel-eslint": "^10.0.2",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint": "^6.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.3",
        "husky": "^3.0.2",
        "jest": "^24.8.0"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn check-quality"
        }
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/out/",
            "<rootDir>/node_modules/"
        ]
    }
}

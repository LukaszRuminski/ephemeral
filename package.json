{
    "name": "ace-website",
    "version": "0.0.1",
    "author": "ACE Team",
    "license": "unlicensed",
    "scripts": {
        "migrate-labels-architecture": "node ./config/migrations/ui-label-entry.migration.js",
        "start": "node server.js",
        "start:static": "npm start -- --static",
        "serve": "forever  start -c \"npm run start:static\" \"./\" && sleep 5",
        "dev": "npm run check-quality && npm start",
        "export": "npm run check-quality && next build ./src && next export ./src -o ./out",
        "postexport": "node config/sitemap-generator.js && node config/copy-files-for-static.js",
        "preview": "npm install && next build ./src",
        "lint": "npm run lint:js && npm run lint:styles",
        "lint:js": "eslint \"./src/pages/*.js\" \"./src/components/**/*.js\" \"./src/adapters/**/*.js\" --fix",
        "lint:styles": "stylelint \"./src/pages/*.js\" \"./src/components/**/*.styles.js\"  \"./src/components/**/*.css\"",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
        "check-quality": "npm run lint && npm run test",
        "check-quality:ci": "npm run lint && npm run test:ci",
        "e2e": "jest -c \"./config/e2e.jest.config.js\"",
        "e2e:ci": "npm run e2e -- --ci --reporters=default --reporters=jest-junit",
        "check-e2e": "npm run serve; npm run e2e;",
        "check-e2e:ci": "npm run serve; npm run e2e:ci",
        "check-a11y": "npm run serve; npm run a11y; node config/pa11y-json-to-junit.js",
        "a11y": "node config/pa11y-ci.js"
    },
    "dependencies": {
        "@mw/image": "^1.0.5",
        "@mw/video": "^1.0.7",
        "@zeit/next-css": "^1.0.1",
        "apollo-cache-inmemory": "^1.6.3",
        "apollo-client": "^2.6.4",
        "apollo-link-http": "^1.5.16",
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "graphql-tag": "^2.10.1",
        "next": "^9.0.2",
        "next-images": "^1.2.0",
        "node-fetch": "^2.6.0",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-markdown": "^4.2.2",
        "styled-components": "^4.3.2"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "babel-eslint": "^10.0.2",
        "babel-plugin-styled-components": "^1.10.6",
        "contentful-management": "^5.11.2",
        "dotenv": "^8.1.0",
        "eslint": "^6.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.3",
        "forever": "^1.0.0",
        "husky": "^3.0.2",
        "jest": "^24.9.0",
        "jest-junit": "^9.0.0",
        "jest-puppeteer": "^4.3.0",
        "junit-report-builder": "^1.3.3",
        "pa11y-ci": "^2.3.0",
        "path": "^0.12.7",
        "prettier": "^1.18.2",
        "puppeteer": "^2.0.0",
        "stylelint": "^11.1.1",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.8.0"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run check-quality"
        }
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/out/",
            "<rootDir>/node_modules/"
        ]
    }
}
